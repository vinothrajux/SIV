<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/bodybg"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <!-- LinearLayout Rows-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- LinearLayout Columns-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <!-- This is for First Icon Start Row 1 Col 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Request For"/>
                    <Spinner
                        android:id="@+id/RequestFor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/btn_dropdown"
                        android:spinnerMode="dropdown" />

                     </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Corporate ID" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ems="14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Corporate Name" />

                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/CorporateName" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Corporate Type" />

                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/CorporateType" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Corporate Address" />

                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/Address1" />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="@+id/Address2" />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="@+id/Address3" />
                     </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="E Mail Id" />

                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/EmailId" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Website" />

                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/Website" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Mobile No" />

                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/MobileNo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text=" Possible Date" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="From Date" />



                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/FromDate" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <TextView
                        style="@style/TextViewLabel"
                        android:text="To Date" />

                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/ToDate" />

                     </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">


                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Follow up Date" />

                    <TextView
                        style="@style/TextViewContent"
                        android:id="@+id/FollowupDate" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/datapanel">



                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="#919978"
                        android:onClick="dashboard"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="Send Mail"
                        android:textColor="#fff" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>