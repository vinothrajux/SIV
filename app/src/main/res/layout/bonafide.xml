<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/bodybg"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <!-- LinearLayout Rows-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- LinearLayout Columns-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <!-- This is for First Icon Start Row 1 Col 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Reg.No"
                        />

                    <SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ems="14" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Admission .No" />

                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC1234546" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Name"
                        />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="XYZ" />
                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Semester"
                        />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="4" />
                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Branch Code" />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="234546" />
                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Branch" />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC" />
                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Father Name"
                        />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC" />
                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Academic Year" />

                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Date" />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="Date" />
                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Certificate For" />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC" />
                    <TextView
                        style="@style/TextViewLabel"
                        android:text="No.of Years" />
                    <TextView
                        style="@style/TextViewContent"
                        android:text="123456" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <!-- This is for First Icon Start Row 1 Col 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="#919978"
                        android:textColor="#fff"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:onClick="dashboard"
                        />
                    <Button
                        android:id="@+id/loginButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="prev"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="#919978"
                        android:textColor="#fff"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:onClick="dashboard"
                        />
                    <Button
                        android:id="@+id/loginButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="close"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="#919978"
                        android:textColor="#fff"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp"
                        android:onClick="dashboard"
                        />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>