<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/bodybg"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <!-- LinearLayout Rows-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- LinearLayout Columns-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <!-- This is for First Icon Start Row 1 Col 1 -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Staff ID" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ems="14" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Staff Name" />

                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC123" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Branch Code" />

                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC123" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Branch" />

                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC123" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Experience" />

                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC123" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Existing Designation" />

                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC123" />

                    <TextView
                        style="@style/TextViewLabel"
                        android:text="Promoted Designation" />

                    <TextView
                        style="@style/TextViewContent"
                        android:text="ABC123" />
                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="#919978"
                        android:textColor="#fff"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:onClick="dashboard"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>